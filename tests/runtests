#!/usr/bin/env zsh

() {
  0=${(%):-%x}
  ZTAP_HOME=${0:a:h:h}
}

function main() {
  emulate -L zsh
  setopt local_options extended_glob

  source $ZTAP_HOME/ztap.zsh
  if [[ $# -gt 0 ]]; then
    ztap -c "$@"
  else
    ztap -c $ZTAP_HOME/tests/(^fail*).zsh(.N)
    # ztap -c $ZTAP_HOME/tests/fail*.zsh(.N)
  fi
}
main "$@"
